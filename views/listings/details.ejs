<% layout('/layouts/boilerplate') %>

    <body>
        <div class="row">
            <div class="col-8 offset-2">
            <div class="card">
                <img class="card-img-top details-img mt-4" src="<%=listing.image%>" alt="listing_image">
                <div class="card-body">
                    <p class="details-card-text">
                        <b>
                            <%= listing.title %>
                        </b><br>
                        <%= listing.description %> <br>
                            &#8377;<%= listing.price.toLocaleString('en-IN') %> <br>
                                <%= listing.location %> <br>
                                    <%= listing.country %>
                    </p>
                </div>
            </div>
            <div class="details-btn mb-2">
            <form method="get" action="/listings/edit/<%=listing._id%>">
                <button class="btn btn-dark edit-btn">Edit</button>
            </form>
            <form method="post" action="/listings/delete/<%=listing._id%>?_method=delete">
                <button class="btn btn-dark del-btn">Delete</button>
            </form>
        </div>
        </div>
    </div>
    </body>